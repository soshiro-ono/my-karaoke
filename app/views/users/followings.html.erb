<%= render "shared/header" %>
<div id="home5" class="contents row">
  <h2 class="page-title">Followings user!</h2>
  <p class="page-p">ここは<%= @user.nickname%>さんがフォローしたユーザー一覧です。</p>
  <%# <p class="page-p">趣味の会うユーザー</p> %>
  <div class="grid">
    <% @users.each do |user| %>
      <table class="detail-table">
        <tbody>
          <tr>
            <th class="user-show-detail-song">投稿者</th>
            <th class="user-show-detail-value">
              <%= link_to user_path(user.id) do %>
                <%= user.nickname %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <% if @user.id == current_user.id %>
      <div class="icon">
        <div class='song-btn-user'>
          <a href="/songs/new">
            曲を登録する
          </a>
        </div>
        <div class="song-btn-user">
          <%= link_to root_path do %>
            みんなの投稿一覧へ
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<%= render "shared/footer" %>
