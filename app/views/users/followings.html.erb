<%= render "shared/header" %>
<div id="home5" class="contents">
  <h2 class="page-title">Followings user!</h2>
  <p class="page-p">このページは<%= @user.nickname%>さんがフォローしたユーザー一覧です。</p>
  <% if user_signed_in? %>
    <% if @user.id == current_user.id %>
      <div class="icon">
        <a href="/songs/new">
          <button type="button" class="btn btn-light">
          曲を登録する
          </button>
        </a>

        <%= link_to root_path do %>
          <button type="button" class="btn btn-light">
            みんなの投稿一覧へ
          </button>
        <% end %>

        <%= link_to user_path(current_user.id) do %>
          <button type="button" class="btn btn-light">
          マイページへ
          </button>
        <% end %>
      </div>
    <% end %>
  <% end %>  
</div>


<div class="main">
  <div class="main-content">
    <div class="main-title-user">
      <%= @user.nickname%>さんがフォローしたユーザー一覧です。
    </div>

    <div class="grid">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">フォローしたユーザー</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= user.nickname %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= render "shared/footer" %>

