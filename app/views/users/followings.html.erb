<%= render "shared/header" %>
<div id="home5" class="contents row">
  <h2 class="page-title">Followings user!</h2>
  <p class="page-p">このページは<%= @user.nickname%>さんがフォローしたユーザー一覧です。</p>
  <% if user_signed_in? %>
    <% if @user.id == current_user.id %>
      <div class="icon">
        <div class='song-btn1'>
          <a href="/songs/new">
            曲を登録する
          </a>
        </div>
        <div class="song-btn1">
          <%= link_to root_path do %>
            みんなの投稿一覧へ
          <% end %>
        </div>
        <div class="song-btn1">
          <%= link_to user_path(current_user.id) do %>
            マイページへ
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>  
</div>
<div class="main">
  <div class="main-content">
    <div class="main-title-user">
      <%= @user.nickname%>さんがフォローしたユーザー一覧です。
    </div>
    <div class="grid">
      <% @users.each do |user| %>
        <table class="detail-table">
          <tbody>
            <tr>
              <th class="user-show-detail-song">投稿者</th>
              <th class="user-show-detail-value">
                <%= link_to user_path(user.id) do %>
                  <%= user.nickname %>
                <% end %>
              </th>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>

