<div class="grid">
  <% @songs.each do |song| %>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="index-detail-user">投稿者</th>
          <th class="index-detail-song">アーティスト名</th>
          <th class="index-detail-value">曲名</th>
        </tr>
        <tr>
          <td class="index-detail-user">
            <%= link_to user_path(song.user_id) do %>
              <%= song.user.nickname %>
            <% end %>
          </td>
          <td class="index-detail-song"><%= song.artist %></td> 
          <td class="index-detail-value">
            <%= link_to song_path(song.id) do %>
              <%= song.title %>
            <% end %>
          </td> 
        </tr>
      </tbody>
    </table>
  <% end %>
</div>