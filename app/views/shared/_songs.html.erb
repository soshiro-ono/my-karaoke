<div class="grid">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">投稿者</th>
        <th scope="col">アーティスト名</th>
        <th scope="col">曲名</th>
      </tr>
    </thead>
    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td>
            <%= link_to user_path(song.user_id) do %>
              <%= song.user.nickname %>
            <% end %>
          </td>
          <td><%= song.artist %></td>
          <td><%= link_to song_path(song.id) do %>
              <%= song.title %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

