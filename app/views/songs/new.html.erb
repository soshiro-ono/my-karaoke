<%= render "shared/header" %>

  <div class="song-main">
    <%= form_with(model: @song, local: true, class: "song-form") do |f| %>

      <div class="new-songs">
        <h2>曲名入力欄</h2>
        <%= f.text_field :title, class:"spots-text", placeholder: "曲名を入れて下さい" %>
      </div>

      <div class = "songs-price-box">
        <h2>アーティスト入力欄</h2>
        <%= f.text_field :artist, class:"songs-price", placeholder: "アーティストを入力して下さい" %>
      </div>

      <div class="new-songs">
      <h2>コメント入力欄</h2>
        <%= f.text_area :memo, class:"songs-text", placeholder: "メモを入力して下さい" %>
      </div>
      <div class="songs-btn-contents">
        <%= f.submit "投稿する" ,class:"song-btn" %>
      </div>
    <% end %>
  </div>
<%= render "shared/footer" %>

